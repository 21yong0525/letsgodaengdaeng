<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.profile.UpdateActivity"
    android:orientation="vertical"
    android:background="#FFFAF0">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEB887"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="반려견 정보수정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EAEAEA"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_dog" />


                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="130dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_photoUpdate"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/camera" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반려견 이름"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/edt_puppyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:hint="이름"
                    android:background="@null"
                    android:layout_marginTop="13dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반려견 나이"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/edt_puppyAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:hint="나이"
                    android:background="@null"
                    android:layout_marginTop="13dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반려견 견종"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/edt_puppyBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:hint="견종"
                    android:background="@null"
                    android:layout_marginTop="13dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="30dp"/>

                <RadioGroup
                    android:id="@+id/group_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="5dp">

                    <RadioButton
                        android:id="@+id/btn_man"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button"
                        android:button="@drawable/edt_text"
                        android:gravity="center"
                        android:text="남아"
                        android:textColor="@drawable/radio_button_text" />

                    <RadioButton
                        android:id="@+id/btn_woman"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button"
                        android:button="@null"
                        android:gravity="center"
                        android:text="여아"
                        android:textColor="@drawable/radio_button_text" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사이즈"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="30dp"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="5dp">

                    <RadioButton
                        android:id="@+id/rbtnSizeLarge"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button"
                        android:button="@drawable/edt_text"
                        android:gravity="center"
                        android:text="대형견"
                        android:textColor="@drawable/radio_button_text" />

                    <RadioButton
                        android:id="@+id/rbtnSizeMedium"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button"
                        android:button="@null"
                        android:gravity="center"
                        android:text="중형견"
                        android:textColor="@drawable/radio_button_text" />

                    <RadioButton
                        android:id="@+id/rbtnSizeSmall"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button"
                        android:button="@null"
                        android:gravity="center"
                        android:text="소형견"
                        android:textColor="@drawable/radio_button_text" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려견 성격 및 특징"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10sp"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_tendency"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Text"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:background="@drawable/itemviewshape"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:layout_marginTop="20dp"
                android:backgroundTint="#DEB887"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>